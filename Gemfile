source 'https://rubygems.org'

gem 'rails'
gem 'rake'
gem 'bcrypt-ruby'
gem 'jquery-rails'
gem 'will_paginate'

group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'spork'
end

group :development do
  gem 'annotate'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'

  gem 'compass-rails'
  gem 'zurb-foundation'
end

group :test do
  gem 'capybara'
  gem 'rb-fsevent'
  gem 'growl'
  gem 'factory_girl_rails'
  gem 'database_cleaner'
end

group :production do
  gem 'pg'
end